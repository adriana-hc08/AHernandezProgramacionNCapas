@model ML.Usuario
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<div class="row">
    <div class="col-md-6 col-sm-12 ms-2">
        <a href="@Url.Action("Formulario", "Usuario")"> <i class="bi bi-person-add" style="font-size: 3em; color:forestgreen"></i></a>

        @*@Html.ActionLink("Busqueda abierta", "", "", new{@class = "btn btn-info",@href = "#multicolapse",data_bs_toggle = "collapse",
            role = "button",aria_expanded = "false",aria_controls = "multicolapse"})*@
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#multicollapse">
            <i class="bi bi-search" style="font-size: 1em;"></i> Busqueda Abierta
        </button>
    </div>
</div>

<br />

<div class="row collapse" id="multicollapse">
    <div class="col-12">

        @using (Html.BeginForm("GetAll", "Usuario", FormMethod.Post, new { @class = "p-3 border rounded" }))
        {
            <div clas="row">
                <div class="col-12 col-md-3 col-sm-12">
                    @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
                    <div class="input-group">
                        <div class="input-group-text">
                            <i class="bi bi-person" style="font-size: 1em; color: #ff00ff;"></i>
                        </div>
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "txtNombre" })
                    </div>
                </div>
                <div class="col-12 col-md-3 col-sm-12">
                    @Html.LabelFor(model => model.ApellidoPaterno, new { @class = "form-label" })
                    <div class="input-group">
                        <div class="input-group-text">
                            <i class="bi bi-person" style="font-size: 1em; color: #ff00ff"></i>
                        </div>
                        @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "form-control", @id = "txtApellidoPa" })
                    </div>
                </div>
                <div class="col-12 col-md-3 col-sm-12">
                    @Html.LabelFor(model => model.ApellidoMaterno, new { @class = "form-label" })
                    <div class="input-group">
                        <div class="input-group-text">
                            <i class="bi bi-person" style="font-size: 1em; color: #ff00ff"></i>
                        </div>
                        @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "form-control", @id = "txtApellidoMa" })
                    </div>
                </div>
                <div class="col-12 col-md-3 col-sm-12">
                    @Html.LabelFor(model => model.Rol, new { @class = "form-label" })
                    <div class="input-group">
                        <div class="input-group-text">
                            <i class="bi bi-0-square" style="font-size: 1em; color: #ff00ff"></i>
                        </div>
                        @Html.DropDownListFor(model => model.Rol.IdRol, new SelectList(Model.Rol.Roles, "IdRol", "Nombre"), "Selecciona una opcion", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <br />
            <div class="text-center">
                <button type="submit" class="btn btn-outline-info mt-2">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>


        }


    </div>
</div>
<br />


<div class="row">
    <div class="table-responsive">
        @if (Model.Usuarios != null)
        {
            <table class="table table-hover">
                <tehead>
                    <tr>
                        <th>Editar</th>
                        <th>IdUsuario</th>
                        <th>Nombre</th>
                        <th>ApellidoPaterno</th>
                        <th>ApellidoMaterno</th>
                        <th>UserName</th>
                        <th>IdRol</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>FechaNacimiento</th>
                        <th>Sexo</th>
                        <th>Telefono</th>
                        <th>Celular</th>
                        <th>Estatus</th>
                        <th>CURP</th>
                        <th>Imagen</th>
                        <th>Direccion</th>
                        <th>Eliminar</th>
                    </tr>
                </tehead>
                <tbody>
                    @foreach (ML.Usuario usuario in Model.Usuarios)
                    {
                        <tr>
                            <td>
                                @*<button type="button" class="btn btn-info">
                                         @Html.ActionLink("Editar", "Formulario", "Usuario", new { @class = "btn btn-info", IdUsuario = Convert.ToInt32(usuario.IdUsuario) }, null)
                                    </button>*@
                                <a href="@Url.Action("Formulario","Usuario", new {IdUsuario=usuario.IdUsuario})">
                                    <i class="bi bi-pencil-square" style="font-size: 2em;"></i>
                                </a>
                            </td>
                            <th scope="row">@usuario.IdUsuario</th>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.ApellidoPaterno</td>
                            <td>@usuario.ApellidoMaterno</td>
                            <td>@usuario.UserName</td>
                            <td>@usuario.Rol.Nombre</td>
                            <td>@usuario.Email</td>
                            <td>@usuario.Password</td>
                            <td>@usuario.FechaNacimiento</td>
                            <td>@usuario.Sexo</td>
                            <td>@usuario.Telefono</td>
                            <td>@usuario.Celular</td>
                            <td>@usuario.Estatus</td>
                            <td>@usuario.CURP</td>
                            <td>
                                @if (usuario.Imagen == null)
                                {
                                    <img id="imgUsuario" height="120px" src="~/Img/imgDefault.png" width="120px" />
                                }
                                else
                                {
                                    <img id="imgUsuario" height="120px" src="data:image/*;base64,@Convert.ToBase64String(usuario.Imagen)" width="120px" />
                                }

                                </td>
                                <td>@usuario.Direccion.Calle</td>
                                <td>
                                    <a href="@Url.Action("Delete","Usuario", new {IdDireccion=usuario.Direccion.IdDireccion})" onclick="alert('¡Esta seguro de eliminar este usuario!')">
                                        <i class="bi bi-trash" style="font-size: 2em;"></i>
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    A simple danger alert-check it out!
                </div>
            }
        </div>
    </div>
</div>

<script>
    var UrlEstatus = '@Url.Action("UpdateEstatus")';
</script>
<script src="~/Scripts/Usuario/Estatus/UpdateEstatus.js"></script>



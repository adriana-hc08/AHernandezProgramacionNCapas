@model ML.Usuario
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<div class="container">
    <div class="row">
        <div class="col-md-6">
           <a href="@Url.Action("Formulario", "Usuario")"> <i class="bi bi-person-add" style="font-size: 3em;"></i></a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (Model.Usuarios != null)
        {
            <table class="table table-hover">
                <tehead>
                    <tr>
                        <th>Editar</th>
                        <th>IdUsuario</th>
                        <th>Nombre</th>
                        <th>ApellidoPaterno</th>
                        <th>ApellidoMaterno</th>
                        <th>UserName</th>
                        <th>IdRol</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>FechaNacimiento</th>
                        <th>Sexo</th>
                        <th>Telefono</th>
                        <th>Celular</th>
                        <th>Estatus</th>
                        <th>CURP</th>
                        <th>Imagen</th>
                        <th>Direccion</th>
                        <th>Eliminar</th>
                    </tr>
                </tehead>
                <tbody>
                    @foreach (ML.Usuario usuario in Model.Usuarios)
                    {
                        <tr>
                            <td>
                                @*<button type="button" class="btn btn-info">
                 @Html.ActionLink("Editar", "Formulario", "Usuario", new { @class = "btn btn-info", IdUsuario = Convert.ToInt32(usuario.IdUsuario) }, null)
            </button>*@
                                <a href="@Url.Action("Formulario","Usuario", new {IdUsuario=usuario.IdUsuario})">
                                    <i class="bi bi-pencil-square" style="font-size: 2em;"></i>
                                </a>
                            </td>
                            <th scope="row">@usuario.IdUsuario</th>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.ApellidoPaterno</td>
                            <td>@usuario.ApellidoMaterno</td>
                            <td>@usuario.UserName</td>
                            <td>@usuario.Rol.Nombre</td>
                            <td>@usuario.Email</td>
                            <td>@usuario.Password</td>
                            <td>@usuario.FechaNacimiento</td>
                            <td>@usuario.Sexo</td>
                            <td>@usuario.Telefono</td>
                            <td>@usuario.Celular</td>
                            <td>@usuario.Estatus</td>
                            <td>@usuario.CURP</td>
                            <td>
                                @if (usuario.Imagen == null)
                                {
                                    <img id="imgUsuario" height="120px" src="~/Img/imgDefault.png" width="120px" />
                                }
                                else
                                {
                                    <img id="imgUsuario" height="120px" src="data:image/*;base64,@Convert.ToBase64String(usuario.Imagen)" width="120px" />
                                }

                            </td>
                            <td>@usuario.Direccion.Calle</td>
                            <td>
                                <a href="@Url.Action("Delete","Usuario", new {IdUsuario=usuario.IdUsuario})" onclick="alert('¡Esta seguro de eliminar este usuario!')">
                                    <i class="bi bi-trash" style="font-size: 2em;"></i>
                                </a>
                            </td>

                        </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        A simple danger alert-check it out!
                    </div>
                }
     </div>
</div>

